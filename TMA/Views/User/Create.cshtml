@model User

@{ ViewData["Title"] = "Create User"; }

<h1 class="gradient-text">Create User</h1>


<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            @if (!string.IsNullOrWhiteSpace(ViewBag.Error))
            {
                <div class="form-group">
                    @ViewBag.Error
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="form-group d-flex">
                <button type="submit" class="btn btn-success mr-1"><i class="bi bi-plus-circle"></i> Create</button>
                <a asp-action="GetList" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>