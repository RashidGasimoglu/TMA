@model Assignment

@{ ViewData["Title"] = "Task"; }

<h1 class="gradient-text">The Task</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Read">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label class="control-label">User</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.User" disabled> </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusList" disabled> </select>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <a asp-action="GetList" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>